@using Entities.Concrete;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "Layout2";
}

@model List<PetOwner>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <table class="table table-bordered">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                         First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Tel
                    </th>
                    <th>PetId</th>
                    
                    <th>
                        Delete
                    </th>
                    <th>
                        Edit
                    </th>
                    
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PetOwnerId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PetId)
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.PetOwnerId" class="btn btn-danger">Delete</a>
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.PetOwnerId" class="btn btn-warning">Edit</a>
                        </td>
                       
                    </tr>
                }
            </table>
            <div class="form-group">
                <a asp-action="Add" class="btn btn-primary">Create New</a>
            </div>
        </div>
    </div>
</div>

