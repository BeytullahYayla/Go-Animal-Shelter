@{
    Layout = "Layout2";
}
@model Entities.Concrete.Pet
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*<input type="hidden" asp-for="Id" />*@
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" asp- />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <label asp-for="ImagePath" class="control-label"></label>
                    <input asp-for="ImagePath" class="form-control" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnimalCategoryId" class="control-label"></label>
                    @Html.DropDownListFor(x=>x.AnimalCategoryId,(List<SelectListItem>)ViewBag.AnimalCategory,new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label asp-for="speciesId" class="control-label"></label>
                    @Html.DropDownListFor(x=>x.speciesId,(List<SelectListItem>)ViewBag.Species,new {@class="form-control"})

                </div>

                <div class="form-group">
                    <label asp-for="PetOwnerId" class="control-label"></label>
                    @Html.DropDownListFor(x=>x.PetOwnerId,(List<SelectListItem>)ViewBag.PetOwners,new {@class="form-control"})
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>